<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/send_panel_padding"
        android:paddingRight="@dimen/send_panel_padding">

        <EditText
            android:id="@+id/edt_mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/edt_mess_margin_bottom"
            android:layout_marginLeft="@dimen/edt_mess_margin_left"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@drawable/edt_mess_bg"
            android:hint="@string/edt_mess_hint"
            android:padding="15dp"
            android:textColorHint="?attr/colorAccent" />

        <ImageButton
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_send_margin"
            android:layout_marginTop="@dimen/btn_send_margin"
            android:layout_marginBottom="@dimen/btn_send_margin"
            android:layout_marginRight="@dimen/edt_mess_margin_left"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_send" />
    </LinearLayout>
</LinearLayout>